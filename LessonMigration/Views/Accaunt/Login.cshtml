@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container-scroller">
    <div class="container-fluid  page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0 justify-content-center">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-12 mx-auto">
                    <div class="card-body px-5 py-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form method="post" asp-action="Login">
                            <div class="form-group">

                                <input asp-for="UserNameOrEmail" class="form-control p_input" placeholder="UserName Or Email">
                                <label asp-validation-for="UserNameOrEmail" class="text-danger"></label>
                            </div>
                            
                            
                            <div class="form-group">

                                <input asp-for="Password" placeholder="Password" class="form-control p_input">
                                <label asp-validation-for="Password" class="text-danger"></label>
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
                            </div>

                            <p class="sign-up text-center">Dont you have an Account?<a asp-controller="Accaunt" asp-action="Register">Register</a></p>

                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}


